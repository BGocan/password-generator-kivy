<MyRoot>:

    random_label: random_label

    BoxLayout:
        orientation: "vertical"

        padding: 5

        Image:
            source: "pmlogo.jpg"
            size_hint_x: 1.0
            size_hint_y: 1.2
            allow_stretch: True
        Label:
            text: "Length Of Password (add integer)"
            font_size: 32
            color: 0.87, 0.88, 0.92
        TextInput:
            id: input
            multiline: False
            hint_text:'Enter integer'
            padding_y: 5,5
            pos_hint: {"center_x": 0.35,"center_y": 1.5}
            size_hint: 0.05,0.5
            on_text: app.process()

        Label:
            text: "PasswordManager"
            font_size: 32
            color: 0.87, 0.88, 0.92
        Label:
            id: random_label
            text: "-"
            font_size: 64
        Button:
            text: "Generate"
            font_sie: 32
            size: 50, 50
            on_press: root.generate_password()
